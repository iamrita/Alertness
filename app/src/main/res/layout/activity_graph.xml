<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/plot_graph"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/avgValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average :"
            />
        <TextView
            android:id="@+id/maxValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum :"
            />
        <TextView
            android:id="@+id/stdDev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Std Dev :"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/startIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StartIndex :"/>
        <TextView
            android:id="@+id/fadeIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FadeIndex :"
            />
        <TextView
            android:id="@+id/audioLen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AudioLen :"
            />
        <TextView
            android:id="@+id/gaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaps :"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:onClick="saveAction"
            />
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:onClick="backAction"
            />
    </LinearLayout>


</LinearLayout>